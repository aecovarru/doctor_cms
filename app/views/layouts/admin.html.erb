<!DOCTYPE html>
<html>
	<head>
		<title>Doctor CMS | <%= @page_title || "Admin" %></title>
	</head>
	<body>
		<div id="header">
			<h1>Doctor CMS Admin</h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<div id="content">
				<%= yield %>
			</div>
		</div>
	</body>
</html>