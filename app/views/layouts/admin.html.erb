<!DOCTYPE html>
<html>
	<head>
		<title>Doctor CMS | <%= @page_title || "Admin" %></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
	</head>
	<body>
		<div id="header">
			<h1>Doctor CMS <%= @page_title || "Admin" %></h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; Global Vision Entertainment</p>
		</div>
	</body>
</html>