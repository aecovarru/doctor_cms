<% @page_title = "Admin Users" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="user index">
	<h2>Admin Users</h2>

	<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+')  + " Add New Admin User", {:action => 'new'}, :class => 'action new') %>

	<div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

	<table class="listing" summary="Admin users list">
		<tr>
			<th><div style="width: 130px" >Username</div></th>
			<th><div style="width: 130px" >Name</div></th>
			<th><div style="width: 130px" >Email</div></th>
			<th><div style="width: 30px" >Admin</div></th>
			<th><div style="width: 120px" >Actions</div></th>
		</tr>
		<% @admin_users.each do |admin_user| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><div style="width: 130px" ><%= admin_user.username %></div></td>
			<td><div style="width: 130px" ><%= admin_user.name %></div></td>
			<td><div style="width: 130px" ><%= mail_to(admin_user.email) %></div></td>
			<td class="center"><%= status_tag(admin_user.administrator) %></td>
			<td class="actions">
				<div style="width: 120px" >
					<%= link_to('Edit', {:action => 'edit', :id => admin_user.id}, :class => 'action edit') %>
					<%= link_to('Delete', {:action => 'delete', :id => admin_user.id}, :class => 'action delete') %>
				</div>
			</td>
		</tr>
		<% end %>
	</table>

</div>