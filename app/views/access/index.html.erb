<% @page_title = "Admin Menu" %>

<div class="menu">
	<% boolean = AdminUser.find_by_username(session[:username]).administrator%>
	<% if boolean %>
		<% admin = "Admin" %>
	<% else %>
		<% admin = "" %>
	<% end %>
	<h2><%= admin + " Menu" %></h2>
	<div class = "identity">Logged in as: <%= session[:username] %></div>
	<ul>
		<li><%= link_to("Manage Accounts", :controller => 'accounts') %></li>
		<% if boolean %>
		<li><%= link_to("Manage Admin Users", :controller => 'admin_users') %></li>
		<% end %>
		<li><%= link_to("Logout", :action => 'logout') %></li>
	</ul>
</div>